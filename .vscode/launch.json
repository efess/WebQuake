{
    "version": "0.2.0",
    "configurations": [

        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "program": "${workspaceFolder}/build/devserver"
        },
        {
          "type": "node",
          "request": "launch",
          "name": "Debug Dedicated",
          "preLaunchTask": "npm: build:justserver",
          "program": "${workspaceFolder}/src/server/game/index.ts",
          "cwd": "${workspaceFolder}",
          "protocol": "inspector",
          "args": [
            "-game", "dm"
          ],
          "outFiles": [
            "${workspaceFolder}/dist/**/*.js"
          ],
          "skipFiles": [
            "<node_internals>/**/*.js"
          ],
          "console":"integratedTerminal"
        }
    ]
}